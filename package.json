{
  "name": "spectral-tests-example-style-guide",
  "version": "0.1.0",
  "description": "API style guide to be used with Spectral OpenAPI linter.",
  "private": true,
  "type": "module",
  "types": "./dist/ruleset.d.ts",
  "main": "./dist/ruleset.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup",
    "types:check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "TS_NODE_PROJECT='./tsconfig.jest.json' jest",
    "all": "npm run types:check && npm run format:fix && npm run lint:fix && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/br-tyler-milner/spectral-tests-example.git"
  },
  "keywords": [
    "openapi",
    "openapi3",
    "openapi31",
    "api-design"
  ],
  "author": "Tyler Milner <tyler.milner@bottlerocketstudios.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/br-tyler-milner/spectral-tests-example/issues"
  },
  "homepage": "https://github.com/br-tyler-milner/spectral-tests-example#readme",
  "dependencies": {
    "@stoplight/spectral-formats": "^1.8.2",
    "@stoplight/spectral-functions": "^1.9.3",
    "@stoplight/spectral-rulesets": "^1.21.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@stoplight/types": "^14.1.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}
